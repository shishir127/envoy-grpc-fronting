{
  "listeners": [
    {
      "address": {
        "socket_address": {
          "address": "0.0.0.0",
          "port_value": 80
        }
      },
      "filter_chains": [
        {
          "filters": [
            {
              "name": "http_connection_manager",
              "config": {
                "codec_type": "auto",
                "stat_prefix": "ingress_http",
                "route_config": {},
                "http_filters": [
                  {
                    "name": "envoy.router",
                    "config": {}
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "cluster_manager": {
    "clusters": [
      {
        "name": "service1",
        "connect_timeout_ms": 250,
        "type": "logical_dns",
        "lb_type": "least_request",
        "features": "http2",
        "hosts": [{"url": "tcp://service1:80"}]
      },
      {
        "name": "service2",
        "connect_timeout_ms": 250,
        "type": "logical_dns",
        "lb_type": "least_request",
        "features": "http2",
        "hosts": [{"url": "tcp://service2:80"}]
      }
    ]
  },
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://127.0.0.1:8001"
  }
}
